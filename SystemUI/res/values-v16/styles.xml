<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.StatusBar.Clock" parent="@android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/status_bar_clock_size</item>
        <item name="android:textColor">@color/status_bar_clock_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.Clock" parent="@style/TextAppearance.StatusBar.Expanded">
        <item name="android:textSize">@dimen/qs_time_expanded_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.QS" parent="@style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/qs_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.QS.DetailHeader" parent="@style/TextAppearance.QS">
        <item name="android:textSize">@dimen/qs_detail_header_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.QS.DetailButton" parent="@style/TextAppearance.QS">
        <item name="android:textSize">@dimen/qs_detail_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Widget.TextView.NumPadKey" parent="@android:style/Widget.TextView">
        <item name="android:textSize">36.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">-16.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Widget.TextView.NumPadKey.Klondike" parent="@style/Widget.TextView.NumPadKey">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="big_thin">
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="DismissPadKey" parent="@android:style/Widget.Button">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
